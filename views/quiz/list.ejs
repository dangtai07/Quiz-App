<% layout = false %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Quiz App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="/css/modern_quiz_list.css" rel="stylesheet">
    <link href="/css/quiz_list_number.css" rel="stylesheet">
    <!-- SweetAlert2 -->
    <link href="https://cdn.jsdelivr.net/npm/@sweetalert2/theme-bootstrap-4/bootstrap-4.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/quizzes">
                <i class="fas fa-brain"></i>
                Quiz App
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- NEW: Room Selection Info -->
                <ul class="navbar-nav me-auto">
                    <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" 
                           href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-white bg-opacity-20 p-2 me-2">
                                    <i class="fas <%= roomInfo.code === 'hrm' ? 'fa-users' : roomInfo.code === 'hse' ? 'fa-shield-alt' : 'fa-crown' %> text-white"></i>
                                </div>
                                <div class="d-flex flex-column">
                                    <span class="fw-medium d-none d-md-inline" style="font-size: 0.9rem;">
                                        <%= roomInfo.name %>
                                    </span>
                                    <span class="fw-medium d-md-none">
                                        <%= roomInfo.code.toUpperCase() %>
                                    </span>
                                    <small class="text-white-50 d-none d-lg-inline" style="font-size: 0.75rem;">
                                        Selected: <%= new Date(roomInfo.selectedAt).toLocaleTimeString() %>
                                    </small>
                                </div>
                            </div>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <h6 class="dropdown-header">
                                    <i class="fas fa-building me-2"></i>
                                    Current Department
                                </h6>
                            </li>
                            <li>
                                <span class="dropdown-item-text">
                                    <strong><%= roomInfo.name %></strong><br>
                                    <small class="text-muted">Code: <%= roomInfo.code.toUpperCase() %></small>
                                </span>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="#" onclick="switchDepartment()">
                                    <i class="fas fa-exchange-alt me-2"></i>Switch Department
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#" onclick="viewDepartmentStats()">
                                    <i class="fas fa-chart-bar me-2"></i>Department Statistics
                                </a>
                            </li>
                        </ul>
                    </li>
                    <% } %>
                </ul>
                
                <div class="navbar-nav ms-auto">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" 
                           href="#" 
                           role="button" 
                           data-bs-toggle="dropdown" 
                           aria-expanded="false"
                           id="navbarDropdown">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-white bg-opacity-20 p-2 me-2" style="position: relative;">
                                    <img src="https://jbagy.me/wp-content/uploads/2025/03/anh-dai-dien-zalo-dep-1.jpg" alt="User" class="rounded-circle align-avatar-image" style="object-fit: cover;">
                                </div>
                                <span class="fw-medium d-none d-sm-inline">
                                    <% if (typeof user !== 'undefined' && user) { %>
                                        <%= user.name || 'Admin' %>
                                    <% } else { %>
                                        Admin
                                    <% } %>
                                </span>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="navbarDropdown">
                            <li>
                                <h6 class="dropdown-header">
                                    <% if (typeof user !== 'undefined' && user) { %>
                                        <i class="fas fa-envelope me-2"></i>
                                        <%= user.email %>
                                    <% } %>
                                </h6>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="/auth/logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="main-container">
        <!-- Header Section -->
        <div class="page-header">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <div class="header-content">
                            <h1 class="page-title">
                                <i class="fas fa-clipboard-list me-3"></i>
                                Quiz Management
                                <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                                <small class="text-white-50 d-block mt-2" style="font-size: 1.2rem; font-weight: 500;">
                                    <i class="fas <%= roomInfo.code === 'hrm' ? 'fa-users' : roomInfo.code === 'hse' ? 'fa-shield-alt' : 'fa-crown' %> me-2"></i>
                                    <%= roomInfo.name %> Department
                                </small>
                                <% } %>
                            </h1>
                            <p class="page-subtitle">
                                <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                                    Manage quizzes for <%= roomInfo.name %> department
                                <% } else { %>
                                    Create, manage, and monitor all your quizzes in one place
                                <% } %>
                            </p>
                            <div class="stats-row">
                                <div class="stat-item">
                                    <span class="stat-number"><%= quizzes.length %></span>
                                    <span class="stat-label">Total Quizzes</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-number"><%= quizzes.filter(q => q.mode === 'online').length %></span>
                                    <span class="stat-label">Online</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-number"><%= quizzes.filter(q => q.mode === 'offline').length %></span>
                                    <span class="stat-label">Offline</span>
                                </div>
                                <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                                <div class="stat-item">
                                    <span class="stat-number">
                                        <i class="fas <%= roomInfo.code === 'hrm' ? 'fa-users' : roomInfo.code === 'hse' ? 'fa-shield-alt' : 'fa-crown' %>"></i>
                                    </span>
                                    <span class="stat-label"><%= roomInfo.code.toUpperCase() %></span>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        <div class="header-actions">
                            <button class="btn btn-outline-light me-2" onclick="refreshQuizzes()">
                                <i class="fas fa-sync-alt me-2"></i>
                                Refresh
                            </button>
                            <button class="btn btn-warning me-2" onclick="openCreateTestModal()">
                                <i class="fas fa-rocket me-2"></i>
                                Create Test
                            </button>
                            <a href="/quizzes/create" class="btn btn-primary-custom">
                                <i class="fas fa-plus me-2"></i>
                                Create New Quiz
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Section -->
        <div class="filter-section">
            <div class="container">
                <div class="filter-card">
                    <div class="filter-header">
                        <h5 class="filter-title">
                            <i class="fas fa-filter me-2"></i>
                            Filter & Search
                            <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                            <small class="text-muted">(<%= roomInfo.code.toUpperCase() %> Department)</small>
                            <% } %>
                        </h5>
                        <button class="btn btn-sm btn-outline-secondary" onclick="clearFilters()">
                            <i class="fas fa-times me-1"></i>
                            Clear All
                        </button>
                    </div>
                    <div class="filter-body">
                        <div class="row g-3">
                            <div class="col-lg-4 col-md-6">
                                <div class="search-wrapper">
                                    <i class="fas fa-search search-icon"></i>
                                    <input type="text" class="form-control search-input" id="searchQuiz" 
                                           placeholder="Search quizzes by title...">
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-3 col-sm-6">
                                <select class="form-select filter-select" id="filterMode">
                                    <option value="">All Modes</option>
                                    <option value="online">Online</option>
                                    <option value="offline">Offline</option>
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-3 col-sm-6" d>
                                <select class="form-select filter-select" id="filterLanguage" disabled>
                                    <option value="">All Languages</option>
                                    <option value="vietnamese">Vietnamese</option>
                                    <option value="english">English</option>
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-6 col-sm-6">
                                <select class="form-select filter-select" id="sortBy">
                                    <option value="newest">Newest First</option>
                                    <option value="oldest">Oldest First</option>
                                    <option value="name">Name A-Z</option>
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-6 col-sm-6">
                                <div class="view-toggle">
                                    <button class="view-btn active" data-view="grid" title="Grid View">
                                        <i class="fas fa-th"></i>
                                    </button>
                                    <button class="view-btn" data-view="list" title="List View">
                                        <i class="fas fa-list"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quizzes Section -->
        <div class="quizzes-section">
            <div class="container">
                <!-- Loading State -->
                <div id="loadingState" class="loading-state" style="display: none;">
                    <div class="loading-spinner">
                        <i class="fas fa-spinner fa-spin"></i>
                    </div>
                    <p>Loading quizzes...</p>
                </div>

                <!-- Empty State -->
                <% if (quizzes.length === 0) { %>
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <h3>No Quizzes Yet</h3>
                    <p>
                        <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                            Get started by creating your first quiz for <%= roomInfo.name %> department.
                        <% } else { %>
                            Get started by creating your first quiz. It's quick and easy!
                        <% } %>
                    </p>
                    <a href="/quizzes/create" class="btn btn-primary-custom">
                        <i class="fas fa-plus me-2"></i>
                        Create Your First Quiz
                    </a>
                </div>
                <% } else { %>

                <!-- Quiz Grid -->
                <div class="quiz-grid" id="quizGrid">
                    <% quizzes.forEach((quiz, index) => { %>
                    <div class="quiz-card" 
                         data-mode="<%= quiz.mode %>" 
                         data-language="<%= quiz.language %>"
                         data-title="<%= quiz.title.toLowerCase() %>"
                         data-number="<%= quiz.number || index + 1 %>"
                         data-date="<%= quiz.updatedAt %>">
                        
                        <!-- Card Header -->
                        <div class="card-header">
                            <div class="card-badges">
                                <span class="badge badge-<%= quiz.mode %>">
                                    <i class="fas <%= quiz.mode === 'online' ? 'fa-globe' : 'fa-desktop' %> me-1"></i>
                                    <%= quiz.mode.charAt(0).toUpperCase() + quiz.mode.slice(1) %>
                                </span>
                                <!-- NEW: Department Badge -->
                                <% if (quiz.roomCode) { %>
                                <span class="badge badge-language" style="background: linear-gradient(135deg, var(--warning-color), #d97706);">
                                    <i class="fas <%= quiz.roomCode === 'hrm' ? 'fa-users' : quiz.roomCode === 'hse' ? 'fa-shield-alt' : 'fa-crown' %> me-1"></i>
                                    <%= quiz.roomCode.toUpperCase() %>
                                </span>
                                <% } %>
                            </div>
                            <div class="card-actions">
                                <div class="dropdown">
                                    <button class="action-btn" 
                                            type="button" 
                                            data-bs-toggle="dropdown" 
                                            aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="/quizzes/<%= quiz._id %>/preview">
                                                <i class="fas fa-eye me-2"></i>Preview
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/quizzes/<%= quiz._id %>/edit">
                                                <i class="fas fa-edit me-2"></i>Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#" onclick="duplicateQuiz('<%= quiz._id %>')">
                                                <i class="fas fa-copy me-2"></i>Duplicate
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#" onclick="shareQuiz('<%= quiz._id %>')">
                                                <i class="fas fa-share me-2"></i>Share
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="#" onclick="deleteQuiz('<%= quiz._id %>')">
                                                <i class="fas fa-trash me-2"></i>Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body">
                            <h3 class="quiz-title" title="<%= quiz.title %>">
                                <%= quiz.title %>
                            </h3>
                            
                            <!-- UPDATED: Quiz Stats - showing number and participants only -->
                            <div class="quiz-stats">
                                <div class="stat">
                                    <i class="fas fa-list-ol"></i>
                                    <span><%= quiz.number || (index + 1) %></span>
                                </div>
                                <div class="stat">
                                    <i class="fas fa-users"></i>
                                    <span><%= quiz.totalCount || 0 %> Participants</span>
                                </div>
                                <% if (quiz.scheduleSettings) { %>
                                <div class="stat">
                                    <i class="fas fa-calendar"></i>
                                    <span>Scheduled</span>
                                </div>
                                <% } %>
                                <div class="stat">
                                    <i class="fas fa-clock"></i>
                                    <span><%= quiz.estimatedDuration || '0m' %></span>
                                </div>
                            </div>

                            <!-- REMOVED: Progress Section completely eliminated -->

                            <!-- Card Footer -->
                            <div class="card-footer">
                                <div class="quiz-meta">
                                    <span class="meta-item">
                                        <i class="fas fa-clock me-1"></i>
                                        Updated <%= new Date(quiz.updatedAt).toLocaleDateString() %>
                                    </span>
                                </div>
                                <div class="quick-actions">
                                    <a href="/quizzes/<%= quiz._id %>/preview" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i>
                                        Preview
                                    </a>
                                    <a href="/quizzes/<%= quiz._id %>/edit" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit me-1"></i>
                                        Edit
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <% } %>

                <!-- No Results State -->
                <div id="noResults" class="empty-state" style="display: none;">
                    <div class="empty-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h3>No Quizzes Found</h3>
                    <p>Try adjusting your search criteria or create a new quiz.</p>
                    <button class="btn btn-outline-primary" onclick="clearFilters()">
                        <i class="fas fa-filter me-2"></i>
                        Clear Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="createTestModal" tabindex="-1" aria-labelledby="createTestModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%); color: white;">
                    <h5 class="modal-title" id="createTestModalLabel">
                        <i class="fas fa-rocket me-2"></i>Create New Test Session
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="createTestForm">
                        <!-- Quiz Selection -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <h6 class="card-title text-primary mb-3">
                                            <i class="fas fa-list-ol me-2"></i>Quiz Selection
                                        </h6>
                                        <div class="form-floating">
                                            <input type="number" 
                                                class="form-control" 
                                                id="quizNumber" 
                                                name="quizNumber" 
                                                placeholder="Quiz Number"
                                                min="1"
                                                required>
                                            <label for="quizNumber">Quiz Number</label>
                                        </div>
                                        <small class="text-muted mt-2 d-block">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Enter the number of the quiz you want to create a test for
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Test Mode -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-cog me-2"></i>Test Mode
                                </h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" 
                                                type="radio" 
                                                name="mode" 
                                                id="modeOnline" 
                                                value="online" 
                                                checked>
                                            <label class="form-check-label" for="modeOnline">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-globe text-success me-2"></i>
                                                    <div>
                                                        <strong>Online (Real-time)</strong>
                                                        <small class="d-block text-muted">Live test with admin control</small>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" 
                                                type="radio" 
                                                name="mode" 
                                                id="modeOffline" 
                                                value="offline">
                                            <label class="form-check-label" for="modeOffline">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-clock text-warning me-2"></i>
                                                    <div>
                                                        <strong>Offline (Scheduled)</strong>
                                                        <small class="d-block text-muted">Self-paced within time frame</small>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Schedule Settings (for Offline mode) -->
                        <div class="row mb-4" id="scheduleSettings" style="display: none;">
                            <div class="col-12">
                                <div class="card border-warning bg-warning bg-opacity-10">
                                    <div class="card-body">
                                        <h6 class="card-title text-warning mb-3">
                                            <i class="fas fa-calendar-alt me-2"></i>Schedule Settings
                                        </h6>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input type="datetime-local" 
                                                        class="form-control" 
                                                        id="startTime" 
                                                        name="startTime">
                                                    <label for="startTime">Start Time</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input type="datetime-local" 
                                                        class="form-control" 
                                                        id="endTime" 
                                                        name="endTime">
                                                    <label for="endTime">End Time</label>
                                                </div>
                                            </div>
                                        </div>
                                        <small class="text-muted">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Participants can join and complete the test within this time frame
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Max Participants -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-users me-2"></i>Participant Limit
                                </h6>
                                <div class="form-floating">
                                    <input type="number" 
                                        class="form-control" 
                                        id="maxParticipants" 
                                        name="maxParticipants" 
                                        placeholder="Maximum Participants"
                                        min="1"
                                        max="1000"
                                        value="50"
                                        required>
                                    <label for="maxParticipants">Maximum Participants</label>
                                </div>
                                <small class="text-muted mt-2 d-block">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Maximum number of participants that can join this test (1-1000)
                                </small>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <button type="submit" form="createTestForm" class="btn btn-primary" id="createTestBtn">
                        <i class="fas fa-rocket me-2"></i>Create Test
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Test Created Success Modal -->
    <div class="modal fade" id="testCreatedModal" tabindex="-1" aria-labelledby="testCreatedModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="testCreatedModalLabel">
                        <i class="fas fa-check-circle me-2"></i>Test Created Successfully!
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="testCreatedContent">
                    <!-- Content will be populated by JavaScript -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="startTestBtn" style="display: none;">
                        <i class="fas fa-play me-2"></i>Start Test Now
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <span class="footer-text">
                        <i class="fas fa-brain me-2"></i>
                        Quiz App Â© <%= new Date().getFullYear() %> All rights reserved
                        <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                        <small class="text-muted ms-2">
                            | <%= roomInfo.name %> Department
                        </small>
                        <% } %>
                    </span>
                </div>
                <div class="col-md-6">
                    <div class="footer-links">
                        <a href="/about">About</a>
                        <a href="/privacy">Privacy</a>
