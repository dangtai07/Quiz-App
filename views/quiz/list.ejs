    <script>
        // Function to switch department
        function switchDepartment() {
            Swal.fire({
                title: 'Switch Department?',
                text: 'You will be redirected to select a different department.',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#667eea',
                cancelButtonColor: '#64748b',
                confirmButtonText: 'Yes, Switch',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/auth/api/admin/switch-room', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            window.location.href = data.redirectUrl;
                        } else {
                            throw new Error(data.message);
                        }
                    })
                    .catch(error => {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Failed to switch department. Please try again.',
                            confirmButtonColor: '#667eea'
                        });
                    });
                }
            });
        }

        // Function to view department statistics
        function viewDepartmentStats() {
            const roomCode = '<%= typeof roomInfo !== "undefined" && roomInfo ? roomInfo.code : "" %>';
            
            if (!roomCode) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'No department selected.',
                    confirmButtonColor: '#667eea'
                });
                return;
            }

            fetch(`/auth/api/admin/room-stats/${roomCode}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const stats = data.stats;
                        Swal.fire({
                            title: `${stats.roomName} Statistics`,
                            html: `
                                <div class="text-start">
                                    <p><strong>Total Quizzes:</strong> ${stats.totalQuizzes}</p>
                                    <p><strong>Total Questions:</strong> ${stats.totalQuestions}</p>
                                    <p><strong>Online Quizzes:</strong> ${stats.byMode.online || 0}</p>
                                    <p><strong>Offline Quizzes:</strong> ${stats.byMode.offline || 0}</p>
                                    <p><strong>Recent Quizzes (7 days):</strong> ${stats.recentQuizzes}</p>
                                    <p><strong>Total Duration:</strong> ${Math.floor(stats.totalDuration / 60)}m ${stats.totalDuration % 60}s</p>
                                </div>
                            `,
                            icon: 'info',
                            confirmButtonColor: '#667eea'
                        });
                    } else {
                        throw new Error(data.message);
                    }
                })
                .catch(error => {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to fetch department statistics.',
                        confirmButtonColor: '#667eea'
                    });
                });
        }

        // Add room info to existing functions
        const originalRefreshQuizzes = window.refreshQuizzes;
        window.refreshQuizzes = function() {
            showLoadingState(true);
            
            // Show room info in loading message
            const roomInfo = '<%= typeof roomInfo !== "undefined" && roomInfo ? roomInfo.name : "" %>';
            if (roomInfo) {
                document.querySelector('#loadingState p').textContent = `Loading ${roomInfo} quizzes...`;
            }
            
            setTimeout(() => {
                showLoadingState(false);
                showNotification('Quizzes refreshed successfully!', 'success');
                
                // Re-animate cards
                document.querySelectorAll('.quiz-card').forEach((card, index) => {
                    card.style.animation = `fadeInUp 0.6s ease-out ${index * 0.1}s both`;
                });
            }, 1500);
        };

        // Dropdown fix for room selection
        document.addEventListener('DOMContentLoaded', function() {
            
            if (typeof bootstrap === 'undefined') {
                console.error('Bootstrap JavaScript is not loaded!');
                return;
            }
            
            const dropdownElements = document.querySelectorAll('.dropdown-toggle');
            
            dropdownElements.forEach(function(element) {
                if (!element.hasAttribute('data-bs-toggle')) {
                    element.setAttribute('data-bs-toggle', 'dropdown');
                }
                if (!element.hasAttribute('aria-expanded')) {
                    element.setAttribute('aria-expanded', 'false');
                }
                
                try {
                    new bootstrap.Dropdown(element);
                } catch (error) {
                    console.error('Error initializing dropdown:', error);
                }
            });
        });
    </script>
    <script>
        // Create Test Modal functionality
        document.addEventListener('DOMContentLoaded', function() {
            const createTestModal = new bootstrap.Modal(document.getElementById('createTestModal'));
            const testCreatedModal = new bootstrap.Modal(document.getElementById('testCreatedModal'));
            const createTestForm = document.getElementById('createTestForm');
            const createTestBtn = document.getElementById('createTestBtn');
            
            // Mode change handler
            document.querySelectorAll('input[name="mode"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    const scheduleSettings = document.getElementById('scheduleSettings');
                    const startTimeInput = document.getElementById('startTime');
                    const endTimeInput = document.getElementById('endTime');
                    
                    if (this.value === 'offline') {
                        scheduleSettings.style.display = 'block';
                        startTimeInput.required = true;
                        endTimeInput.required = true;
                        
                        // Set default times (start: now + 1 hour, end: now + 24 hours)
                        const now = new Date();
                        const startTime = new Date(now.getTime() + 60 * 60 * 1000);
                        const endTime = new Date(now.getTime() + 24 * 60 * 60 * 1000);
                        
                        startTimeInput.value = startTime.toISOString().slice(0, 16);
                        endTimeInput.value = endTime.toISOString().slice(0, 16);
                    } else {
                        scheduleSettings.style.display = 'none';
                        startTimeInput.required = false;
                        endTimeInput.required = false;
                    }
                });
            });
            
            // Form submission
            createTestForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const formData = new FormData(this);
                const data = {};
                
                for (let [key, value] of formData.entries()) {
                    data[key] = value;
                }
                
                // Add schedule settings for offline mode
                if (data.mode === 'offline') {
                    data.scheduleSettings = {
                        startTime: data.startTime,
                        endTime: data.endTime
                    };
                    delete data.startTime;
                    delete data.endTime;
                }
                
                // Show loading state
                createTestBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Creating Test...';
                createTestBtn.disabled = true;
                
                try {
                    const response = await fetch('/test/create', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        // Hide create modal
                        createTestModal.hide();
                        
                        // Show success modal
                        showTestCreatedModal(result);
                        
                        // Reset form
                        createTestForm.reset();
                        document.getElementById('scheduleSettings').style.display = 'none';
                    } else {
                        throw new Error(result.message);
                    }
                    
                } catch (error) {
                    console.error('Create test error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error Creating Test',
                        text: error.message,
                        confirmButtonColor: '#667eea'
                    });
                } finally {
                    // Reset button
                    createTestBtn.innerHTML = '<i class="fas fa-rocket me-2"></i>Create Test';
                    createTestBtn.disabled = false;
                }
            });
            
            function showTestCreatedModal(result) {
                const { test, joinLink, qrCode } = result;
                const contentDiv = document.getElementById('testCreatedContent');
                const startTestBtn = document.getElementById('startTestBtn');
                
                let scheduleInfo = '';
                if (test.mode === 'offline' && test.scheduleSettings) {
                    const startTime = new Date(test.scheduleSettings.startTime);
                    const endTime = new Date(test.scheduleSettings.endTime);
                    scheduleInfo = `
                        <div class="alert alert-info">
                            <i class="fas fa-clock me-2"></i>
                            <strong>Schedule:</strong> ${startTime.toLocaleString()} - ${endTime.toLocaleString()}
                        </div>
                    `;
                }
                
                contentDiv.innerHTML = `
                    <div class="text-center mb-4">
                        <div class="badge bg-success fs-6 mb-3">
                            Test Code: <strong>${test.testCode}</strong>
                        </div>
                        <h6>Quiz #${test.quizNumber}: ${test.quizTitle}</h6>
                        <p class="text-muted">Mode: ${test.mode.toUpperCase()} | Max Participants: ${test.maxParticipants}</p>
                    </div>
                    
                    ${scheduleInfo}
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-primary">
                                <div class="card-header bg-primary text-white">
                                    <i class="fas fa-link me-2"></i>Join Link
                                </div>
                                <div class="card-body">
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" id="joinLinkInput" value="${joinLink}" readonly>
                                        <button class="btn btn-outline-primary" onclick="copyJoinLink()">
                                            <i class="fas fa-copy"></i>
                                        </button>
                                    </div>
                                    <small class="text-muted">Share this link with participants</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-secondary">
                                <div class="card-header bg-secondary text-white">
                                    <i class="fas fa-qrcode me-2"></i>QR Code
                                </div>
                                <div class="card-body text-center">
                                    ${qrCode ? `<img src="${qrCode}" alt="QR Code" class="img-fluid" style="max-width: 150px;">` : '<p class="text-muted">QR Code not available</p>'}
                                    <div class="mt-2">
                                        <small class="text-muted">Scan to join test</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Instructions for participants:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Access via the join link above</li>
                            <li>Or visit the app and enter test code: <strong>${test.testCode}</strong></li>
                            ${test.mode === 'online' ? '<li>Wait in the lobby until you start the test</li>' : '<li>Can join anytime within the scheduled period</li>'}
                        </ul>
                    </div>
                `;
                
                // Show/hide start test button for online mode
                if (test.mode === 'online') {
                    startTestBtn.style.display = 'inline-block';
                    startTestBtn.onclick = function() {
                        const adminUrl = `/test/room/${test.testCode}?admin=true`;
                        window.open(adminUrl, '_blank');
                        testCreatedModal.hide();
                    };
                } else {
                    startTestBtn.style.display = 'none';
                }
                
                testCreatedModal.show();
            }
            
            // Global function for copying join link
            window.copyJoinLink = function() {
                const input = document.getElementById('joinLinkInput');
                input.select();
                document.execCommand('copy');
                
                // Show feedback
                const button = event.target.closest('button');
                const originalContent = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check text-success"></i>';
                
                setTimeout(() => {
                    button.innerHTML = originalContent;
                }, 2000);
                
                showNotification('Join link copied to clipboard!', 'success');
            };
            
            // Global function to open create test modal
            window.openCreateTestModal = function() {
                createTestModal.show();
            };
        });
        </script>
