<% layout = false %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Quiz App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="/css/modern_quiz_list.css" rel="stylesheet">
    <!-- SweetAlert2 -->
    <link href="https://cdn.jsdelivr.net/npm/@sweetalert2/theme-bootstrap-4/bootstrap-4.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/quizzes">
                <i class="fas fa-brain"></i>
                Quiz App
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- NEW: Room Selection Info -->
                <ul class="navbar-nav me-auto">
                    <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" 
                           href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-white bg-opacity-20 p-2 me-2">
                                    <i class="fas <%= roomInfo.code === 'hrm' ? 'fa-users' : roomInfo.code === 'hse' ? 'fa-shield-alt' : 'fa-crown' %> text-white"></i>
                                </div>
                                <div class="d-flex flex-column">
                                    <span class="fw-medium d-none d-md-inline" style="font-size: 0.9rem;">
                                        <%= roomInfo.name %>
                                    </span>
                                    <span class="fw-medium d-md-none">
                                        <%= roomInfo.code.toUpperCase() %>
                                    </span>
                                    <small class="text-white-50 d-none d-lg-inline" style="font-size: 0.75rem;">
                                        Selected: <%= new Date(roomInfo.selectedAt).toLocaleTimeString() %>
                                    </small>
                                </div>
                            </div>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <h6 class="dropdown-header">
                                    <i class="fas fa-building me-2"></i>
                                    Current Department
                                </h6>
                            </li>
                            <li>
                                <span class="dropdown-item-text">
                                    <strong><%= roomInfo.name %></strong><br>
                                    <small class="text-muted">Code: <%= roomInfo.code.toUpperCase() %></small>
                                </span>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="#" onclick="switchDepartment()">
                                    <i class="fas fa-exchange-alt me-2"></i>Switch Department
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#" onclick="viewDepartmentStats()">
                                    <i class="fas fa-chart-bar me-2"></i>Department Statistics
                                </a>
                            </li>
                        </ul>
                    </li>
                    <% } %>
                </ul>
                
                <div class="navbar-nav ms-auto">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" 
                           href="#" 
                           role="button" 
                           data-bs-toggle="dropdown" 
                           aria-expanded="false"
                           id="navbarDropdown">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-white bg-opacity-20 p-2 me-2" style="position: relative;">
                                    <img src="https://jbagy.me/wp-content/uploads/2025/03/anh-dai-dien-zalo-dep-1.jpg" alt="User" class="rounded-circle align-avatar-image" style="object-fit: cover;">
                                </div>
                                <span class="fw-medium d-none d-sm-inline">
                                    <% if (typeof user !== 'undefined' && user) { %>
                                        <%= user.name || 'Admin' %>
                                    <% } else { %>
                                        Admin
                                    <% } %>
                                </span>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="navbarDropdown">
                            <li>
                                <h6 class="dropdown-header">
                                    <% if (typeof user !== 'undefined' && user) { %>
                                        <i class="fas fa-envelope me-2"></i>
                                        <%= user.email %>
                                    <% } %>
                                </h6>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="/auth/logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="main-container">
        <!-- Header Section -->
        <div class="page-header">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <div class="header-content">
                            <h1 class="page-title">
                                <i class="fas fa-clipboard-list me-3"></i>
                                Quiz Management
                                <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                                <small class="text-white-50 d-block mt-2" style="font-size: 1.2rem; font-weight: 500;">
                                    <i class="fas <%= roomInfo.code === 'hrm' ? 'fa-users' : roomInfo.code === 'hse' ? 'fa-shield-alt' : 'fa-crown' %> me-2"></i>
                                    <%= roomInfo.name %> Department
                                </small>
                                <% } %>
                            </h1>
                            <p class="page-subtitle">
                                <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                                    Manage quizzes for <%= roomInfo.name %> department
                                <% } else { %>
                                    Create, manage, and monitor all your quizzes in one place
                                <% } %>
                            </p>
                            <div class="stats-row">
                                <div class="stat-item">
                                    <span class="stat-number"><%= quizzes.length %></span>
                                    <span class="stat-label">Total Quizzes</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-number"><%= quizzes.filter(q => q.mode === 'online').length %></span>
                                    <span class="stat-label">Online</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-number"><%= quizzes.filter(q => q.mode === 'offline').length %></span>
                                    <span class="stat-label">Offline</span>
                                </div>
                                <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                                <div class="stat-item">
                                    <span class="stat-number">
                                        <i class="fas <%= roomInfo.code === 'hrm' ? 'fa-users' : roomInfo.code === 'hse' ? 'fa-shield-alt' : 'fa-crown' %>"></i>
                                    </span>
                                    <span class="stat-label"><%= roomInfo.code.toUpperCase() %></span>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        <div class="header-actions">
                            <button class="btn btn-outline-light me-2" onclick="refreshQuizzes()">
                                <i class="fas fa-sync-alt me-2"></i>
                                Refresh
                            </button>
                            <a href="/quizzes/create" class="btn btn-primary-custom">
                                <i class="fas fa-plus me-2"></i>
                                Create New Quiz
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Department Info Banner -->
        <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
        <div class="container">
            <div class="alert alert-info border-0 shadow-sm mb-4" style="background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(99, 102, 241, 0.1)); border-left: 4px solid var(--info-color) !important;">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas <%= roomInfo.code === 'hrm' ? 'fa-users' : roomInfo.code === 'hse' ? 'fa-shield-alt' : 'fa-crown' %> fa-2x text-info"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="alert-heading mb-1">
                            <i class="fas fa-info-circle me-2"></i>
                            Currently Managing: <%= roomInfo.name %> Department
                        </h6>
                        <p class="mb-1">
                            You are viewing and managing quizzes for the <strong><%= roomInfo.name %></strong> department.
                            All new quizzes will be automatically assigned to this department.
                        </p>
                        <small class="text-muted">
                            <i class="fas fa-clock me-1"></i>
                            Selected at: <%= new Date(roomInfo.selectedAt).toLocaleString() %>
                        </small>
                    </div>
                    <div>
                        <button class="btn btn-outline-info btn-sm" onclick="switchDepartment()">
                            <i class="fas fa-exchange-alt me-1"></i>
                            Switch Department
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Filter Section -->
        <div class="filter-section">
            <div class="container">
                <div class="filter-card">
                    <div class="filter-header">
                        <h5 class="filter-title">
                            <i class="fas fa-filter me-2"></i>
                            Filter & Search
                            <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                            <small class="text-muted">(<%= roomInfo.code.toUpperCase() %> Department)</small>
                            <% } %>
                        </h5>
                        <button class="btn btn-sm btn-outline-secondary" onclick="clearFilters()">
                            <i class="fas fa-times me-1"></i>
                            Clear All
                        </button>
                    </div>
                    <div class="filter-body">
                        <div class="row g-3">
                            <div class="col-lg-4 col-md-6">
                                <div class="search-wrapper">
                                    <i class="fas fa-search search-icon"></i>
                                    <input type="text" class="form-control search-input" id="searchQuiz" 
                                           placeholder="Search quizzes by title...">
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-3 col-sm-6">
                                <select class="form-select filter-select" id="filterMode">
                                    <option value="">All Modes</option>
                                    <option value="online">Online</option>
                                    <option value="offline">Offline</option>
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-3 col-sm-6">
                                <select class="form-select filter-select" id="filterLanguage">
                                    <option value="">All Languages</option>
                                    <option value="vietnamese">Vietnamese</option>
                                    <option value="english">English</option>
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-6 col-sm-6">
                                <select class="form-select filter-select" id="sortBy">
                                    <option value="newest">Newest First</option>
                                    <option value="oldest">Oldest First</option>
                                    <option value="name">Name A-Z</option>
                                    <option value="questions">Most Questions</option>
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-6 col-sm-6">
                                <div class="view-toggle">
                                    <button class="view-btn active" data-view="grid" title="Grid View">
                                        <i class="fas fa-th"></i>
                                    </button>
                                    <button class="view-btn" data-view="list" title="List View">
                                        <i class="fas fa-list"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quizzes Section -->
        <div class="quizzes-section">
            <div class="container">
                <!-- Loading State -->
                <div id="loadingState" class="loading-state" style="display: none;">
                    <div class="loading-spinner">
                        <i class="fas fa-spinner fa-spin"></i>
                    </div>
                    <p>Loading quizzes...</p>
                </div>

                <!-- Empty State -->
                <% if (quizzes.length === 0) { %>
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <h3>No Quizzes Yet</h3>
                    <p>
                        <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                            Get started by creating your first quiz for <%= roomInfo.name %> department.
                        <% } else { %>
                            Get started by creating your first quiz. It's quick and easy!
                        <% } %>
                    </p>
                    <a href="/quizzes/create" class="btn btn-primary-custom">
                        <i class="fas fa-plus me-2"></i>
                        Create Your First Quiz
                    </a>
                </div>
                <% } else { %>

                <!-- Quiz Grid -->
                <div class="quiz-grid" id="quizGrid">
                    <% quizzes.forEach((quiz, index) => { %>
                    <div class="quiz-card" 
                         data-mode="<%= quiz.mode %>" 
                         data-language="<%= quiz.language %>"
                         data-title="<%= quiz.title.toLowerCase() %>"
                         data-questions="<%= quiz.questions.length %>"
                         data-date="<%= quiz.updatedAt %>">
                        
                        <!-- Card Header -->
                        <div class="card-header">
                            <div class="card-badges">
                                <span class="badge badge-<%= quiz.mode %>">
                                    <i class="fas <%= quiz.mode === 'online' ? 'fa-globe' : 'fa-desktop' %> me-1"></i>
                                    <%= quiz.mode.charAt(0).toUpperCase() + quiz.mode.slice(1) %>
                                </span>
                                <!-- NEW: Department Badge -->
                                <% if (quiz.roomCode) { %>
                                <span class="badge badge-language" style="background: linear-gradient(135deg, #6366f1, #8b5cf6);">
                                    <i class="fas <%= quiz.roomCode === 'hrm' ? 'fa-users' : quiz.roomCode === 'hse' ? 'fa-shield-alt' : 'fa-crown' %> me-1"></i>
                                    <%= quiz.roomCode.toUpperCase() %>
                                </span>
                                <% } %>
                            </div>
                            <div class="card-actions">
                                <div class="dropdown">
                                    <button class="action-btn" 
                                            type="button" 
                                            data-bs-toggle="dropdown" 
                                            aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="/quizzes/<%= quiz._id %>/preview">
                                                <i class="fas fa-eye me-2"></i>Preview
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/quizzes/<%= quiz._id %>/edit">
                                                <i class="fas fa-edit me-2"></i>Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#" onclick="duplicateQuiz('<%= quiz._id %>')">
                                                <i class="fas fa-copy me-2"></i>Duplicate
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#" onclick="shareQuiz('<%= quiz._id %>')">
                                                <i class="fas fa-share me-2"></i>Share
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="#" onclick="deleteQuiz('<%= quiz._id %>')">
                                                <i class="fas fa-trash me-2"></i>Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body">
                            <h3 class="quiz-title" title="<%= quiz.title %>">
                                <%= quiz.title %>
                            </h3>
                            
                            <div class="quiz-stats">
                                <div class="stat">
                                    <i class="fas fa-question-circle"></i>
                                    <span><%= quiz.questions.length %> Questions</span>
                                </div>
                                <div class="stat">
                                    <i class="fas fa-users"></i>
                                    <span><%= quiz.totalCount || 0 %> Participants</span>
                                </div>
                                <% if (quiz.scheduleSettings) { %>
                                <div class="stat">
                                    <i class="fas fa-calendar"></i>
                                    <span>Scheduled</span>
                                </div>
                                <% } %>
                                <!-- NEW: Department Info -->
                                <% if (quiz.roomCode) { %>
                                <div class="stat">
                                    <i class="fas <%= quiz.roomCode === 'hrm' ? 'fa-users' : quiz.roomCode === 'hse' ? 'fa-shield-alt' : 'fa-crown' %>"></i>
                                    <span><%= quiz.roomCode.toUpperCase() %> Dept</span>
                                </div>
                                <% } %>
                            </div>

                            <!-- Progress Bar -->
                            <div class="progress-section">
                                <div class="progress-info">
                                    <span class="progress-label">Completion Rate</span>
                                    <span class="progress-value">
                                        <%= quiz.totalCount > 0 ? Math.round((quiz.completedCount / quiz.totalCount) * 100) : 0 %>%
                                    </span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" style="width: <%= quiz.totalCount > 0 ? (quiz.completedCount / quiz.totalCount) * 100 : 0 %>%"></div>
                                </div>
                            </div>

                            <!-- Card Footer -->
                            <div class="card-footer">
                                <div class="quiz-meta">
                                    <span class="meta-item">
                                        <i class="fas fa-clock me-1"></i>
                                        Updated <%= new Date(quiz.updatedAt).toLocaleDateString() %>
                                    </span>
                                </div>
                                <div class="quick-actions">
                                    <a href="/quizzes/<%= quiz._id %>/preview" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i>
                                        Preview
                                    </a>
                                    <a href="/quizzes/<%= quiz._id %>/edit" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit me-1"></i>
                                        Edit
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <% } %>

                <!-- No Results State -->
                <div id="noResults" class="empty-state" style="display: none;">
                    <div class="empty-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h3>No Quizzes Found</h3>
                    <p>Try adjusting your search criteria or create a new quiz.</p>
                    <button class="btn btn-outline-primary" onclick="clearFilters()">
                        <i class="fas fa-filter me-2"></i>
                        Clear Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <span class="footer-text">
                        <i class="fas fa-brain me-2"></i>
                        Quiz App Â© <%= new Date().getFullYear() %> All rights reserved
                        <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                        <small class="text-muted ms-2">
                            | <%= roomInfo.name %> Department
                        </small>
                        <% } %>
                    </span>
                </div>
                <div class="col-md-6">
                    <div class="footer-links">
                        <a href="/about">About</a>
                        <a href="/privacy">Privacy</a>
                        <a href="/terms">Terms</a>
                        <a href="/contact">Contact</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/modern_quiz_list.js"></script>
    
    <!-- Room Management Scripts -->
    <script>
        // Function to switch department
        function switchDepartment() {
            Swal.fire({
                title: 'Switch Department?',
                text: 'You will be redirected to select a different department.',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#667eea',
                cancelButtonColor: '#64748b',
                confirmButtonText: 'Yes, Switch',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/auth/api/admin/switch-room', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            window.location.href = data.redirectUrl;
                        } else {
                            throw new Error(data.message);
                        }
                    })
                    .catch(error => {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Failed to switch department. Please try again.',
                            confirmButtonColor: '#667eea'
                        });
                    });
                }
            });
        }

        // Function to view department statistics
        function viewDepartmentStats() {
            const roomCode = '<%= typeof roomInfo !== "undefined" && roomInfo ? roomInfo.code : "" %>';
            
            if (!roomCode) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'No department selected.',
                    confirmButtonColor: '#667eea'
                });
                return;
            }

            fetch(`/auth/api/admin/room-stats/${roomCode}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const stats = data.stats;
                        Swal.fire({
                            title: `${stats.roomName} Statistics`,
                            html: `
                                <div class="text-start">
                                    <p><strong>Total Quizzes:</strong> ${stats.totalQuizzes}</p>
                                    <p><strong>Total Questions:</strong> ${stats.totalQuestions}</p>
                                    <p><strong>Online Quizzes:</strong> ${stats.byMode.online || 0}</p>
                                    <p><strong>Offline Quizzes:</strong> ${stats.byMode.offline || 0}</p>
                                    <p><strong>Recent Quizzes (7 days):</strong> ${stats.recentQuizzes}</p>
                                    <p><strong>Total Duration:</strong> ${Math.floor(stats.totalDuration / 60)}m ${stats.totalDuration % 60}s</p>
                                </div>
                            `,
                            icon: 'info',
                            confirmButtonColor: '#667eea'
                        });
                    } else {
                        throw new Error(data.message);
                    }
                })
                .catch(error => {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to fetch department statistics.',
                        confirmButtonColor: '#667eea'
                    });
                });
        }

        // Add room info to existing functions
        const originalRefreshQuizzes = window.refreshQuizzes;
        window.refreshQuizzes = function() {
            showLoadingState(true);
            
            // Show room info in loading message
            const roomInfo = '<%= typeof roomInfo !== "undefined" && roomInfo ? roomInfo.name : "" %>';
            if (roomInfo) {
                document.querySelector('#loadingState p').textContent = `Loading ${roomInfo} quizzes...`;
            }
            
            setTimeout(() => {
                showLoadingState(false);
                showNotification('Quizzes refreshed successfully!', 'success');
                
                // Re-animate cards
                document.querySelectorAll('.quiz-card').forEach((card, index) => {
                    card.style.animation = `fadeInUp 0.6s ease-out ${index * 0.1}s both`;
                });
            }, 1500);
        };

        // Dropdown fix for room selection
        document.addEventListener('DOMContentLoaded', function() {
            
            if (typeof bootstrap === 'undefined') {
                console.error('Bootstrap JavaScript is not loaded!');
                return;
            }
            
            const dropdownElements = document.querySelectorAll('.dropdown-toggle');
            
            dropdownElements.forEach(function(element) {
                if (!element.hasAttribute('data-bs-toggle')) {
                    element.setAttribute('data-bs-toggle', 'dropdown');
                }
                if (!element.hasAttribute('aria-expanded')) {
                    element.setAttribute('aria-expanded', 'false');
                }
                
                try {
                    new bootstrap.Dropdown(element);
                } catch (error) {
                    console.error('Error initializing dropdown:', error);
                }
            });
        });
    </script>
</body>
</html>